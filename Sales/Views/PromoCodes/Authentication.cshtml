@model Sales.DataLayer.Entities.PromoCode

@{
    ViewData["Title"] = "Register Promo Code";
}

<h1>Register</h1>

<h4>Promo Code</h4>

<a asp-controller="PromoCodes" asp-action="GetPromoCode">Get Promo Code</a>

<h2>Login</h2>

<form asp-action="Login" asp-controller="PromoCodes" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Code">Enter your Promo Code</label>
            <input type="text" asp-for="Code" />
            <span asp-validation-for="Code" />
        </div>
    </div>
</form>